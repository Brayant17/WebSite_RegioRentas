---
import logo from "../../assets/logo_regio_rentas-removebg.webp";
import FooterSVG from "./FooterSVG.astro";
---

<!-- <FooterSVG /> -->
<footer class="w-fill pb-8 pt-20 bg-slate-800 text-white m-0">
    <div class="w-11/12 md:w-8/12 m-auto rounded-2xl">
        <section
            class="flex flex-col md:flex-row justify-between items-center pb-2"
        >
            <div class="w-24 h-24 bg-slate-100 rounded-full p-1 m-1 md:m-0">
                <img
                    src={logo.src}
                    alt="Logo pie de pagina Regio Rentas"
                    class="w-full h-full object-contain"
                />
            </div>
            <div class="flex flex-col gap-2 items-center md:items-start">
                <h6 class="font-semibold">Regio Rentas</h6>
                <a class="text-slate-400" href="#">Acerca de</a>
                <a class="text-slate-400" href="">Contáctenos</a>
            </div>
            <div class="flex flex-col gap-2 items-center md:items-start">
                <h6 class="font-semibold">Portal</h6>
                <a class="text-slate-400" href="">Conviertete en broker</a>
                <a class="text-slate-400" href="">Términos y condiciones</a>
            </div>
        </section>
        <section
            class="flex flex-col md:flex-row justify-between items-center border-t border-slate-400 py-8"
        >
            <p>
                Derechos reservados: RegioRentas
                <span class="mt-2 block text-sm font-bold text-slate-400"
                    >Design By: <a
                        class="text-orange-500"
                        href="https://www.instagram.com/brayan_tsj/"
                        target="_blank">@Brayan_tsj</a
                    ></span
                >
            </p>
            <div class="flex gap-4 mt-8">
                <a
                    class="bg-white text-slate-800 rounded-full p-2.5 inline-block"
                    href="#"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="icon icon-tabler icons-tabler-outline icon-tabler-brand-facebook"
                        ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                        ></path><path
                            d="M7 10v4h3v7h4v-7h3l1 -4h-4v-2a1 1 0 0 1 1 -1h3v-4h-3a5 5 0 0 0 -5 5v2h-3"
                        ></path></svg
                    >
                </a>
                <a
                    class="bg-white text-slate-800 rounded-full p-2.5 inline-block"
                    href="#"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="icon icon-tabler icons-tabler-outline icon-tabler-brand-instagram"
                        ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                        ></path><path
                            d="M4 8a4 4 0 0 1 4 -4h8a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-8a4 4 0 0 1 -4 -4z"
                        ></path><path d="M9 12a3 3 0 1 0 6 0a3 3 0 0 0 -6 0"
                        ></path><path d="M16.5 7.5v.01"></path></svg
                    >
                </a>
                <a
                    class="bg-white text-slate-800 rounded-full p-2.5 inline-block"
                    href="#"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="icon icon-tabler icons-tabler-outline icon-tabler-brand-tiktok"
                        ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                        ></path><path
                            d="M21 7.917v4.034a9.948 9.948 0 0 1 -5 -1.951v4.5a6.5 6.5 0 1 1 -8 -6.326v4.326a2.5 2.5 0 1 0 4 2v-11.5h4.083a6.005 6.005 0 0 0 4.917 4.917z"
                        ></path></svg
                    >
                </a>
            </div>
        </section>
    </div>
</footer>

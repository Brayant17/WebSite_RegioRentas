---
import Card from "./Card.astro";

interface Props {
    title: string;
    text: string;
    icon: any;
}

const { title, text, icon } = Astro.props;
---

<Card class="basis-1 grow-1 py-9 rounded-xl flex flex-col max-w-xs">
    <div class="h-28">
        <img class="m-auto p-4 bg-red-100 rounded-full" src={icon} />
    </div>
    <div class="flex flex-col gap-4">
        <h4 class="text-xl font-bold text-center">{title}</h4>
        <p class="px-10">
            {text}
        </p>
    </div>
</Card>

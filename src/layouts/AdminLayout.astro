---
// AdminLayout.astro
import "../styles/global.css";
import Sidebar from "../components/admin/Sidebar.astro";
import Navbar from "../components/admin/Navbar.astro";
const { title } = Astro.props;
---

<html lang="es" class="admin-theme">
    <head>
        <meta charset="utf-8" />
        <title>{title ? `${title} | Admin` : "Panel Admin"}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1" />
    </head>
    <body class="flex min-h-screen">
        <Sidebar client:load />
        <div class="flex-1 flex flex-col sm:ml-64 transition-all duration-300">
            <Navbar client:load />
            <main class="p-6 bg-muted/10 flex-1 rounded-t-lg">
                <slot />
            </main>
        </div>
    </body>
</html>

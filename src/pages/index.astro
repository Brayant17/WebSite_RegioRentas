---
// reestrucutrar todo
import CardProperty from "../components/CardProperty.astro"
import Layout from "../layouts/Layout.astro"
import propiedades from "../services/propiedades";  

type Propiedad = {
    titulo: string;
    direccion: String;
    precio: number;
}

const porpiedades : Propiedad[] = propiedades()


---

<Layout title="Index">
	<section class="w-full grid md:grid-cols-2 lg:grid-cols-4 gap-y-6 gap-x-6">
		{
			porpiedades.map(({titulo, direccion, precio})=>(
				<CardProperty titulo={titulo} direccion={direccion} precio={precio} />
			))
		}
	</section>
</Layout>